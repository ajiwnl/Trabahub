@model Credentials

<div class="profile-layer mt-5">
    <div class="profile-card border-2 border border-dark" style="border-radius: 20px;">
        <div class="row">
            <div class="col">
                <img src="~/res/profile-user.png" />
            </div>
        </div>

        <div class="profile-details mt-4">
            <form method="post" asp-action="Edit">
                <div class="row">
                    <div class="col">
                        <label class="bfontbody">User Type: @Model.UserType</label>
                        <input asp-for="UserType" class="form-control" readonly />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label class="bfontbody">Username:</label>
                        <input asp-for="Username" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label class="bfontbody">Email:</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                </div>
                <div class="row" hidden>
                    <div class="col">
                        <label class="bfontbody">Password:</label>
                        <input asp-for="Password" class="form-control" readonly input-type="password" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label class="bfontbody">First Name:</label>
                        <input asp-for="fName" class="form-control" />
                    </div>
                    <div class="col">
                        <label class="bfontbody">Last Name:</label>
                        <input asp-for="lName" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label class="bfontbody">Date Created:</label>
                        <input asp-for="CreationDate" class="form-control" readonly />
                    </div>
                </div>
                <div class="row" hidden>
                    <div class="col">
                        <label class="bfontbody">Date Created:</label>
                        <input asp-for="VerificationCode" class="form-control" readonly />
                    </div>
                </div>
                <div class="center-element mt-4" role="group">
                    <button type="submit" class="btn btn-primary" style="width: 150px">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
