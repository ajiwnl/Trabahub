@model Credentials

<style>
    #imagePlaceholder {
        width: 2in;
        height: 2in;
        background-color: white;
        border-radius: 50%; /* Makes the placeholder circular */
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden; /* Ensure the image doesn't overflow the circular container */
        margin-left: 40%;
    }

        /* Style for the image within the circular placeholder */
        #imagePlaceholder img {
            width: 192px; /* Adjust the width as needed */
            height: 192px; /* Adjust the height as needed */
            object-fit: cover;
            border-radius: 50%; /* Makes the image circular */
        }
</style>

<div class="profile-layer debug">
        <div class="profile-details mt-4">
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <!--New Code Starts-->
                <div class="form-group row">
                    <div class="col-sm-6 offset-sm-1 mb-5">
                        <!-- Circular placeholder -->
                        <div id="imagePlaceholder">
                            <img src="~/img//@Model.PROFIMAGEPATH" alt="Profile Image">
                        </div>
                    </div>
                </div>
                <!--New Code Ends-->
            <!-- Input for uploading profile image -->
            <div class="form-group row">
                <label for="profImage" class="col-sm-3 col-form-label">Edit Profile:</label>
                <div class="col-sm-9">
                    <input type="file" class="form-control" id="profImage" name="profImage" accept="image/*" asp-for="PROFIMG" required />
                </div>
            </div>
                <div class="row">
                    <div class="col">
                    <label class="col-form-label">User Type: @Model.UserType</label>
                        <input asp-for="UserType" class="form-control" readonly />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                    <label class="col-form-label">Username:</label>
                        <input asp-for="Username" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                    <label class="col-form-label">Email:</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                </div>
                <div class="row" hidden>
                    <div class="col">
                    <label class="col-form-label">Password:</label>
                        <input asp-for="Password" class="form-control" readonly input-type="password" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                    <label class="col-form-label">First Name:</label>
                        <input asp-for="fName" class="form-control" />
                    </div>
                    <div class="col">
                    <label class="col-form-label">Last Name:</label>
                        <input asp-for="lName" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                    <label class="col-form-label">Date Created:</label>
                        <input asp-for="CreationDate" class="form-control" readonly />
                    </div>
                </div>
                <div class="row" hidden>
                    <div class="col">
                    <label class="col-form-label">Date Created:</label>
                        <input asp-for="VerificationCode" class="form-control" readonly />
                    </div>
                </div>
                <div class="center-element mt-4" role="group">
                    <button type="submit" class="btn btn-primary" style="width: 150px">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
