@model Credentials

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="registerlayer" id="registerlayer">
	<div class="logincontainer">
		<div class="wrapper registerbody">
			<div class="registerside pb-5">
				<div class="container">
					<div class="row">
						<div class="col">
							<img src="~/res/LargeLogo.png" class="loginlogo" />
						</div>
					</div>
					<div class="row">
						<div class="col">
							<label class="loginheader text-white">CO-WORKING SPACES AND STUDY HUBS IN CEBU</label>
						</div>
					</div>
					<div class="row pt-3">
						<div class="col">
							<label class="loginheaderb text-white">In An Innovative Environment</label>
						</div>
					</div>
				</div>
			</div>
			<div class="registermain" id="registercard">
				<div class="grid-center">
					<div class="row pt-3">
						<div class="col">
							<label class="text-center h2 text-white fontsign" style="font-family: 'Noto Sans', sans-serif; font-weight: 700">Are you a</label>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<label class="loginheaderb text-white">Client or an Owner?</label>
						</div>
					</div>
					<div class="form-group mt-4">
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="radioOption1" name="radBtnOptions" value="1">
							<label class="form-check-label loginheaderb text-white" for="radioOption1">Customer</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="radioOption2" name="radBtnOptions" value="2">
							<label class="form-check-label loginheaderb text-white" for="radioOption2">Listing Owners</label>
						</div>
					</div>
					<div class="row pt-4 pb-2">
						<div class="col">
							<button type="submit" id="continueBtn" class="dbuttonlbls text-white border-0 text-decoration-none rounded-1" style="background-color: cornflowerblue;">Continue</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<script>
	$(document).ready(function () {
		$("#continueBtn").click(function () {
			var selectedOption = $("input[name='radBtnOptions']:checked").val();
			if (selectedOption === "1") {
				window.location.href = "Register";
			} else if (selectedOption === "2") {
				window.location.href = "Register";
			} else {
				// Handle if no option is selected
				Swal.fire({
					icon: 'error',
					title: 'Oops...',
					text: 'Please select an option!',
				});
			}
		});
	});
</script>